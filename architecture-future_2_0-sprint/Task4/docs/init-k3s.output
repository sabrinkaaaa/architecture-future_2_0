# helm_release.goapp:
resource "helm_release" "goapp" {
    atomic                     = false
    chart                      = "charts/go-app"
    cleanup_on_fail            = false
    create_namespace           = false
    dependency_update          = false
    disable_crd_hooks          = false
    disable_openapi_validation = false
    disable_webhooks           = false
    force_update               = false
    id                         = "go-app"
    lint                       = false
    max_history                = 0
    metadata                   = {
        app_version    = "0.1.0"
        chart          = "goapp"
        first_deployed = 1763244450
        last_deployed  = 1763244450
        name           = "go-app"
        namespace      = "future-2-0"
        notes          = ""
        revision       = 1
        values         = jsonencode(
            {
                env     = [
                    {
                        name  = "DB_CONNECTION_STRING"
                        value = "postgres://postgres:postgres@postgres-postgresql.future-2-0.svc.cluster.local/postgres?sslmode=disable"
                    },
                ]
                image   = {
                    pullPolicy = "IfNotPresent"
                    repository = "ghcr.io/breadrock1/architecture-future_2_0/go-app:sha-7e89814"
                }
                service = {
                    port = 8080
                }
            }
        )
        version        = "0.1.0"
    }
    name                       = "go-app"
    namespace                  = "future-2-0"
    pass_credentials           = false
    recreate_pods              = false
    render_subchart_notes      = true
    replace                    = false
    reset_values               = false
    reuse_values               = false
    set_wo                     = (write-only attribute)
    skip_crds                  = false
    status                     = "deployed"
    take_ownership             = false
    timeout                    = 300
    upgrade_install            = false
    values                     = [
        <<-EOT
            image:
              repository: "ghcr.io/breadrock1/architecture-future_2_0/go-app:sha-7e89814"
              pullPolicy: IfNotPresent
            
            env:
              - name: "DB_CONNECTION_STRING"
                value: "postgres://postgres:postgres@postgres-postgresql.future-2-0.svc.cluster.local/postgres?sslmode=disable"
            
            service:
              port: 8080
        EOT,
    ]
    verify                     = false
    version                    = "0.1.0"
    wait                       = true
    wait_for_jobs              = false
}

